import java.util.Scanner;

/*
* Author : Isabelle
*Date : 7-Jan-2021 
*/
public class Parcdestationnement
	{

		public static void main(String[] args)
			{
				Scanner sc=new Scanner(System.in);
				int N=sc.nextInt();
				int cv=0;
				int co=0;
			for(int i=0;i< N ;i++)
					{
						if (N[i]=".")
							co++;
					}
				for(int i=0;i<N;i++)
				{
					if (N[i]="C")
						cv++;
				}
				System.out.println(cv);

			}

	}
pas fini
